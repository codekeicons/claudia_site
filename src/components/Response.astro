---

import blinker from "@/styles/blinker.module.css"

type ResponseProps = {
    id: string,
    error: string,
    correo: string
}


const { id, error, correo }= Astro.props as ResponseProps
---

<div class="flex items-center justify-normal space-x-10">
   {id !== "" ? 
   
        <span>
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="150"
                height="150"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="icon icon-tabler text-white icons-tabler-filled icon-tabler-rosette-discount-check"
                ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                    d="M12.01 2.011a3.2 3.2 0 0 1 2.113 .797l.154 .145l.698 .698a1.2 1.2 0 0 0 .71 .341l.135 .008h1a3.2 3.2 0 0 1 3.195 3.018l.005 .182v1c0 .27 .092 .533 .258 .743l.09 .1l.697 .698a3.2 3.2 0 0 1 .147 4.382l-.145 .154l-.698 .698a1.2 1.2 0 0 0 -.341 .71l-.008 .135v1a3.2 3.2 0 0 1 -3.018 3.195l-.182 .005h-1a1.2 1.2 0 0 0 -.743 .258l-.1 .09l-.698 .697a3.2 3.2 0 0 1 -4.382 .147l-.154 -.145l-.698 -.698a1.2 1.2 0 0 0 -.71 -.341l-.135 -.008h-1a3.2 3.2 0 0 1 -3.195 -3.018l-.005 -.182v-1a1.2 1.2 0 0 0 -.258 -.743l-.09 -.1l-.697 -.698a3.2 3.2 0 0 1 -.147 -4.382l.145 -.154l.698 -.698a1.2 1.2 0 0 0 .341 -.71l.008 -.135v-1l.005 -.182a3.2 3.2 0 0 1 3.013 -3.013l.182 -.005h1a1.2 1.2 0 0 0 .743 -.258l.1 -.09l.698 -.697a3.2 3.2 0 0 1 2.269 -.944zm3.697 7.282a1 1 0 0 0 -1.414 0l-3.293 3.292l-1.293 -1.292l-.094 -.083a1 1 0 0 0 -1.32 1.497l2 2l.094 .083a1 1 0 0 0 1.32 -.083l4 -4l.083 -.094a1 1 0 0 0 -.083 -1.32z"
                ></path></svg
            >
        </span>
        <div class="">
            <h1 class={`text-white text-5xl ${blinker.semibold}`}>
                El correo se ha enviado exitosamente
            </h1>
            <div class={`flex flex-col space-y ${blinker.light}`}>
                <h1 class="text-white text-2xl w-5/6 mt-5">
                    Hemos recibido tu mensaje, gracias por querer ponerte en
                    contacto con nosotros. 
                </h1>
                <p class="text-white text-2xl w-5/6 mt-10">
                    En cuando revisemos tu situcacion e
                    interes, uno de nuestros asesores se pondra en contacto mediante
                    el correo {correo}
                </p>

                <a href="/" class="flex p-3 w-56 justify-center rounded-lg bg-white items-center mt-10 space-x-2">
                    <span>
                        <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler text-black icons-tabler-outline icon-tabler-chevron-left"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M15 6l-6 6l6 6" /></svg>
                    </span>
                    <span class={`text-black text-xl ${blinker.semibold}`}>Volver al inicio</span>
                </a>
            </div>
        </div>
    
    :

        <span>
            <svg  xmlns="http://www.w3.org/2000/svg"  width="150"  height="150"  viewBox="0 0 24 24"  fill="currentColor"  class="icon icon-tabler text-white icons-tabler-filled icon-tabler-bug"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 4a4 4 0 0 1 3.995 3.8l.005 .2a1 1 0 0 1 .428 .096l3.033 -1.938a1 1 0 1 1 1.078 1.684l-3.015 1.931a7.17 7.17 0 0 1 .476 2.227h3a1 1 0 0 1 0 2h-3v1a6.01 6.01 0 0 1 -.195 1.525l2.708 1.616a1 1 0 1 1 -1.026 1.718l-2.514 -1.501a6.002 6.002 0 0 1 -3.973 2.56v-5.918a1 1 0 0 0 -2 0v5.917a6.002 6.002 0 0 1 -3.973 -2.56l-2.514 1.503a1 1 0 1 1 -1.026 -1.718l2.708 -1.616a6.01 6.01 0 0 1 -.195 -1.526v-1h-3a1 1 0 0 1 0 -2h3.001v-.055a7 7 0 0 1 .474 -2.173l-3.014 -1.93a1 1 0 1 1 1.078 -1.684l3.032 1.939l.024 -.012l.068 -.027l.019 -.005l.016 -.006l.032 -.008l.04 -.013l.034 -.007l.034 -.004l.045 -.008l.015 -.001l.015 -.002l.087 -.004a4 4 0 0 1 4 -4zm0 2a2 2 0 0 0 -2 2h4a2 2 0 0 0 -2 -2z" /></svg>
        </span>
        <div class="">
            <h1 class={`text-white text-5xl ${blinker.semibold}`}>
                Error
            </h1>
            <div class={`flex flex-col space-y ${blinker.light}`}>
                <h1 class="text-white text-2xl w-5/6 mt-5">
                    No hemos podido procesar tu solicitud. 
                </h1>
                <p class="text-white text-2xl w-5/6 mt-10">
                    Intenta comunicarte con nosotros mediante nuestros medios de contacto via email y/o numero telefonico.


                    <span class={`text-white text-sm ${blinker.light}`}>{error}</span>
                </p>

                <a href="/" class="flex p-3 w-56 justify-center rounded-lg bg-white  items-center mt-10 space-x-2">
                    <span>
                        <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler text-black icons-tabler-outline icon-tabler-chevron-left"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M15 6l-6 6l6 6" /></svg>
                    </span>
                    <span class={`text-black text-xl ${blinker.semibold}`}>Volver al inicio</span>
                </a>
            </div>
        </div>
    }
</div>
