---
import Container from "./Container.astro";
import blinker from "@/styles/blinker.module.css";
import TicketItem from "./TicketItem.astro";
---

<section class="max-w-7xl mx-auto">
    <Container>
        <div class="py-20 px-10">
            <h1 class={` ${blinker.semibold} text-white text-5xl md:text-7xl text-center`}>
                Experiencia
            </h1>

            <p
                class={` ${blinker.regular} text-xl md:text-2xl text-white mt-5 text-center`}
            >
                Los números definen nuestra calidad y tracyectoria
            </p>

            <div class="content-center mt-20 grid grid-cols-1 space-y-14 md:space-y-0 md:grid-cols-3">
                <TicketItem text="Años" value={12} />
                <TicketItem text="Clientes" value={210} />
                <TicketItem text="Proyectos" value={100} />
            </div>
        </div>
    </Container>
</section>
