---
import blinker from "@/styles/blinker.module.css";
import { string } from "astro:schema";
import type { AstroComponentFactory } from "astro/runtime/server/index.js";

interface SolucionesCard {
    titulo: string;
    descripcion: string;
    icon: AstroComponentFactory;
}

const { titulo, descripcion, icon: Icon } = Astro.props as SolucionesCard;
---

<div class="group">
    <div
        class="h-80 bg-black border rounded-2xl transition-all transform delay-100 group-hover:bg-white border-[#111111] content-center px-10 py-14"
    >
        {Icon && <Icon/>}
        <h1
            class={`text-xl mt-7 lg:text-[28px] text-white group-hover:text-black mb-7 ${blinker.semibold}`}
        >
            {titulo}
        </h1>
        <p class={`text-white text-xl ${blinker.regular}`}>{descripcion}</p>
    </div>
</div>
