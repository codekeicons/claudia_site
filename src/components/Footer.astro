---
import Container from "./Container.astro";
import blinker from "@/styles/blinker.module.css";
import Logo from "./Logo.astro";
import LocPoint from "@/icons/LocPoint.astro";
import Correo from "@/icons/Correo.astro";
import Telefono from "@/icons/Telefono.astro";
---

<section class="bg-black">
    <div class="max-w-7xl py-10 px-10 mx-auto">
        <div class="flex flex-wrap md:flex-nowrap w-full justify-center items-center">
            <div class="md:border-r h-52 md:border-[#111111] w-full md:w-2/4 content-center">
                <div class="flex items-center justify-center space-x-3">
                    <Logo />
                </div>
            </div>
            <div class="w-full md:w-2/4 ml-10">
                <div>
                    <ul class="space-y-5">
                        <li class="flex items-center space-x-3">
                            <LocPoint />
                            <span
                                class={`text-sm text-white ${blinker.regular}`}
                                >Monterrey, Nuevo León, México</span
                            >
                        </li>
                        <li class="flex items-center space-x-3">
                            <Telefono />
                            <span
                                class={`text-sm text-white ${blinker.regular}`}
                                >+52 81 2086 0525
                            </span>
                        </li>
                        <li class="flex items-center space-x-3">
                            <Correo />
                            <span
                                class={`text-sm text-white ${blinker.regular}`}
                                >claudia@mujica.com.mx
                            </span>
                        </li>
                        <li class="mt-14 text-center md:text-left">
                            <span
                                class={`text-[10px] md:text-sm  text-white ${blinker.regular}`}
                                >@2025 Todos los derechos reservados  |  Designed by KE
                            </span
                            >
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
